# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET	/build	    controllers.Application.build

GET	/jobs	    controllers.Application.getRunningJobs
GET	/datasources	controllers.Application.getDataSources
GET	/test/slidereveal	controllers.Application.slidereveal
GET	/test/drugbank		controllers.Application.testDrugBank
GET	/test/npc		controllers.Application.testNPC
GET	/test/srs		controllers.Application.testSRS
GET	/test/integrity		controllers.Application.testIntegrity

POST	/math	    controllers.MathJax.mathjax
GET	/math	    controllers.MathJax.render(id: String ?= null)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
GET	/webjars/*file		    controllers.WebJarAssets.at(file)
